<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.parrot.freeflight.activities.TestActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take Off"
        android:id="@+id/buttonTakeoffLand"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/buttonMoveUpTest" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Move Up"
        android:id="@+id/buttonMoveUpTest"
        android:layout_below="@+id/buttonTakeoffLand"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Move Down"
        android:id="@+id/buttonMoveDownTest"
        android:layout_below="@+id/buttonMoveUpTest"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Move Left"
        android:id="@+id/buttonMoveLeftTest"
        android:layout_below="@+id/buttonMoveDownTest"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Move Right"
        android:id="@+id/buttonMoveRightTest"
        android:layout_below="@+id/buttonMoveLeftTest"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Move Forward"
        android:id="@+id/buttonMoveForwardTest"
        android:layout_below="@+id/buttonTurnRightTest"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Move Back"
        android:id="@+id/buttonMoveBackwardTest"
        android:layout_above="@+id/buttonMoveRightTest"
        android:layout_alignRight="@+id/buttonMoveForwardTest" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn Left"
        android:id="@+id/buttonTurnLeftTest"
        android:layout_alignTop="@+id/buttonTakeoffLand"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn Right"
        android:id="@+id/buttonTurnRightTest"
        android:layout_below="@+id/buttonTurnLeftTest"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Listen"
        android:id="@+id/listenButton"
        android:layout_below="@+id/buttonMoveRightTest"
        android:layout_toRightOf="@+id/buttonMoveLeftTest" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Error:"
        android:id="@+id/errorTextView"
        android:layout_below="@+id/listenButton"
        android:layout_alignLeft="@+id/buttonTakeoffLand"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Command: "
        android:id="@+id/commandTextView"
        android:layout_below="@+id/errorTextView"
        android:layout_alignLeft="@+id/errorTextView" />

</RelativeLayout>
